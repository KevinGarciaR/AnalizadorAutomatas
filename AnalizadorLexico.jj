void variable_declarator():{}{
  {
  Token identificador;
  Token valor;
  } 
	identificador=<IDENTIFICADOR> <ASIGNACION> (valor=<INTEGER_LITERAL> | valor=<BOOLEAN_LITERAL> | valor=<DOUBLE_LITERAL> | valor=<STRING_LITERAL>)
	{
	   //System.out.print(identificador.image + " ");
